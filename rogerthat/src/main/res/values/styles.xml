<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <!-- Main branding color -->
        <item name="colorPrimary">@color/mc_primary_color</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/mc_primary_color_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/mc_primary_color</item>

        <!-- Changes color of the separator in the navigation view -->
        <item name="android:listDivider">@drawable/divider_gradient</item>

        <item name="android:textColor">@color/mc_default_text</item>
        <item name="android:textColorPrimaryInverse">@color/mc_default_text_inverse</item>
    </style>

    <style name="NormalButtonTheme" parent="Widget.AppCompat.Button"></style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="DarkGrayButtonBackground" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="colorButtonNormal">@color/mc_default_button</item>
    </style>

    <style name="LightFacebookButtonBackground" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/mc_white</item>
        <item name="colorButtonNormal">@color/com_facebook_button_send_background_color</item>
    </style>

    <style name="FacebookButtonBackground" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/mc_white</item>
        <item name="colorButtonNormal">@color/com_facebook_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PinButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonRed" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonYellow" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_yellow</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonGreen" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinEntry">
        <item name="android:src">@drawable/selector_pin_entry</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/mc_default_text_inverse</item>
    </style>

    <style name="PrimaryButtonTheme" parent="BaseButton">
        <item name="colorButtonNormal">@color/mc_primary_color</item>
    </style>

    <style name="RogerthatButtonTheme" parent="BaseButton">
        <item name="colorButtonNormal">@color/mc_green</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/mc_default_text</item>
        <item name="android:colorBackground">@color/mc_white</item>
        <item name="android:textColor">@color/mc_default_text</item>
        <item name="colorAccent">@color/mc_secondary_color</item>
        <item name="colorPrimary">@color/mc_primary_color</item>
        <item name="colorPrimaryDark">@color/mc_primary_color</item>
    </style>

    <style name="NoTitleDialogTheme" parent="DialogTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
    </style>

    <style name="EditTextWhite" parent="AppTheme">
        <item name="colorControlNormal">@color/mc_white</item>
        <item name="colorAccent">@color/mc_white</item>
    </style>

    <style name="CheckedTextViewWhite" parent="AppTheme">
        <item name="colorControlNormal">@color/mc_white</item>
        <item name="colorControlActivated">@color/mc_white</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/mc_black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
