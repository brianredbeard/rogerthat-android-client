<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ds_slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mc_primary_color</item>
        <item name="colorPrimaryDark">@color/mc_secondary_color</item>
        <item name="colorAccent">@color/mc_primary_color</item>

        <!-- Changes color of the separator in the navigation view -->
        <item name="android:listDivider">@drawable/divider_gradient</item>

        <!--Change de color of the NavigationDrawer Icon in the Toolbar.-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:textColor">@color/mc_default_text</item>
        <item name="android:textColorPrimaryInverse">@color/mc_default_text_inverse</item>
    </style>

    <style name="ButtonTheme" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/mc_default_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <!--<item name="drawableSize">40dp</item>-->
    <!--<item name="spinBars">true</item>-->
    <item name="color">@color/mc_green</item>
    </style>

    <!--<style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">-->
        <!--<item name="titleTextStyle">@color/mc_black</item>-->
        <!--<item name="background">@color/mc_background_color</item>-->
    <!--</style>-->

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="PinButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonRed" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonYellow" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_yellow</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinButtonGreen" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:textSize">@dimen/pin_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>

    <style name="PinEntry">
        <item name="android:src">@drawable/selector_pin_entry</item>
    </style>

    <style name="ButtonBackground" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/mc_default_text_inverse</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="FacebookButtonBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_facebook</item>
        <item name="android:textColor">@color/mc_white</item>
    </style>
</resources>
