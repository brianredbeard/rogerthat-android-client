<?xml version="1.0" encoding="utf-8"?>
<com.mobicage.rogerthat.plugins.messaging.widgets.RangeSliderWidget
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slider_text"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp" />

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        rsb:absoluteMaxValue="100"
        rsb:absoluteMinValue="0"
        rsb:thumbNormal="@drawable/range_slider_thumb"
        rsb:thumbShadow="true"
        rsb:thumbPressed="@drawable/range_slider_thumb"
        rsb:thumbDisabled="@drawable/range_slider_thumb"
        rsb:defaultColor="@color/mc_primary_color"
        rsb:activeColor="@color/mc_primary_color"
        rsb:showLabels="false"
        rsb:valuesAboveThumbs="false" />

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/range_slider_with_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        rsb:absoluteMaxValue="100"
        rsb:absoluteMinValue="0"
        rsb:thumbNormal="@drawable/range_slider_thumb"
        rsb:thumbPressed="@drawable/range_slider_thumb"
        rsb:thumbShadow="true"
        rsb:thumbDisabled="@drawable/range_slider_thumb"
        rsb:defaultColor="@color/mc_primary_color"
        rsb:activeColor="@color/mc_primary_color"
        rsb:showLabels="false"
        rsb:valuesAboveThumbs="true" />

</com.mobicage.rogerthat.plugins.messaging.widgets.RangeSliderWidget>