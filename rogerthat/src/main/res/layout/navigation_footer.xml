<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/vertical_gradient"
              android:gravity="bottom"
              android:orientation="horizontal"
              android:padding="@dimen/activity_vertical_margin">

    <ImageButton
        android:id="@+id/menu_toolbar_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:src="@drawable/menu_toolbar_0"/>

    <ImageButton
        android:id="@+id/menu_toolbar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:src="@drawable/menu_toolbar_1"/>

    <ImageButton
        android:id="@+id/menu_toolbar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:src="@drawable/menu_toolbar_2"/>

    <ImageButton
        android:id="@+id/menu_toolbar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:src="@drawable/menu_toolbar_3"/>

</LinearLayout>
