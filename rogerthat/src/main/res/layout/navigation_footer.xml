<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_view_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vertical_gradient"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:tag="news"
        android:src="@drawable/menu_toolbar_0"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:tag="order"
        android:src="@drawable/menu_toolbar_1"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:tag="events"
        android:src="@drawable/menu_toolbar_2"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:tag="loyalty"
        android:src="@drawable/menu_toolbar_3"/>

</LinearLayout>
