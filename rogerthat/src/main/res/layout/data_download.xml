<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/mc_background_color">

    <ImageView
        android:id="@+id/data_download_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:ico_color="@color/mc_primary_icon"
        app:ico_icon="@string/faw_arrow_circle_down"
        app:ico_size="100dp" >
    </ImageView>

    <TextView
        android:id="@+id/data_download_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/data_download_icon"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="@string/data_download_slogan"/>

    <TextView
        android:id="@+id/data_download_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/data_download_slogan"
        android:gravity="center_horizontal"
        android:textColor="@color/mc_gray_22"
        android:textSize="16sp"
        android:text="@string/data_download_details"/>

    <EditText
        android:id="@+id/data_download_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/data_download_details"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/data_download_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:theme="@style/PrimaryButtonTheme"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="@string/request_download"
        android:textSize="20sp" />


</RelativeLayout>

