<?xml version="1.0" encoding="utf-8"?>
<com.mobicage.rogerthat.util.ui.SafeViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_via_contacts_view_flipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/add_via_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/add_via_email_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/add_via_email_description"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/update_profile_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/add_via_email_text_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_via_email_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:theme="@style/ButtonBackground" />
    </LinearLayout>
</com.mobicage.rogerthat.util.ui.SafeViewFlipper>