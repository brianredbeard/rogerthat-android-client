<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mc_background_color"
        android:orientation="vertical">

        <com.mobicage.rogerthat.util.ui.ScaleImageView
            android:id="@+id/full_width_rogerthat_logo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/registration_logo"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/rogerthat_logo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="50dp"
                android:src="@drawable/registration_logo" />

            <TextView
                android:id="@+id/notifications_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rogerthat_logo1"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/registration_notifications_header"
                android:textColor="@color/mc_homescreen_text"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/notifications_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifications_text"
                android:layout_marginTop="20dp"
                android:theme="@style/PrimaryButtonTheme"
                android:gravity="center"
                android:minHeight="50dp"
                android:text="@string/continue_"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

