<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mobicage.rogerthat.util.ui.ScaleImageView
        android:id="@+id/full_width_rogerthat_logo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/registration_logo"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/rogerthat_logo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="50dp"
            android:src="@drawable/registration_logo" />

        <TextView
            android:id="@+id/registration_pin_was_mailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rogerthat_logo3"
            android:gravity="center_horizontal"
            android:textColor="@color/mc_homescreen_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/registration_enter_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/registration_request_new_pin"
            android:layout_marginBottom="20dp"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="@string/registration_enter_code"
            android:imeOptions="actionDone"
            android:inputType="text|number"
            android:maxLength="4"
            android:minHeight="50dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/registration_request_new_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tint_gradient"
            android:textColor="@color/mc_white"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/activate"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
