<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration_container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <com.mobicage.rogerthat.util.ui.SafeViewFlipper
        android:id="@+id/registration_viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/rogerthat_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <TextView
                    android:id="@+id/rogerthat_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/registration_tos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:text="@string/registration_tos"
                    android:textColorLink="@color/mc_link"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/registration_agree_tos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:minWidth="100dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/rogerthat_logo1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <TextView
                    android:id="@+id/ibeacon_usage_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_compass"
                    android:textColor="@color/mc_primary_color"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/ibeacon_usage_augment_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_augment_experience"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ibeacon_usage_used_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_used_for"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_discover_services_automatically"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ibeacon_usage_not_used_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_not_used_for"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_store"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ibeacon_usage_track_location_without_concent"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/registration_beacon_usage_continue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:minWidth="100dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/continue_"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/rogerthat_logo2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_option_fb"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/registration_fb_wont_post"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fb_login"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/f" />

                    <Button
                        android:id="@+id/login_via_fb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/registration_use_fb"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/registration_option_email"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/email_login"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/mail_icon" />

                    <Button
                        android:id="@+id/login_via_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/registration_use_email"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/rogerthat_logo3"
                    android:layout_alignParentTop="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rogerthat_logo3"
                    android:layout_above="@+id/login_via_oauth"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/oauth_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/fa_lock"
                        android:textColor="@color/mc_primary_color"
                        android:textSize="75sp" />

                    <TextView
                        android:id="@+id/oauth_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="_Authenticate using your 'dummy' account._"
                        android:textColor="@color/mc_homescreen_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/login_via_oauth"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/authenticate"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/rogerthat_logo4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <TextView
                    android:id="@+id/registration_need_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="18sp" >
                </TextView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/get_accounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_user_plus"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"/>

                    <AutoCompleteTextView
                        android:id="@+id/registration_enter_email"
                        android:layout_toLeftOf="@id/get_accounts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:imeOptions="actionGo"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/primary_text_light" >
                    </AutoCompleteTextView>

                </RelativeLayout>

                <Button
                    android:id="@+id/registration_continue_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/registration_send_code"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mobicage.rogerthat.util.ui.ScaleImageView
                android:id="@+id/full_width_rogerthat_logo5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/registration_logo"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/registration_pin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/rogerthat_logo5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/registration_logo" />

                <TextView
                    android:id="@+id/registration_pin_was_mailed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/mc_homescreen_text"
                    android:textSize="18sp" >
                </TextView>

                <EditText
                    android:id="@+id/registration_enter_pin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/registration_enter_pin_hint"
                    android:imeOptions="actionDone"
                    android:inputType="text|number"
                    android:maxLength="4"
                    android:textSize="30sp" >
                </EditText>

                <Button
                    android:id="@+id/registration_request_new_pin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/registration_request_new_pin"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </com.mobicage.rogerthat.util.ui.SafeViewFlipper>

</ScrollView>