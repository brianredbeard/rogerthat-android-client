<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mc_background_color">

    <ScrollView
        android:id="@+id/friend_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mc_background_color"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/friend_detail_header" />

            <LinearLayout
                android:id="@+id/service_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:textSize="16sp" />

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/friend_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/actions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@null"
                        android:foreground="?attr/selectableItemBackground"
                        app:ico_color="@color/mc_primary_icon"
                        app:ico_icon="@string/faw_map_marker"
                        app:ico_size="35dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@null"
                        android:foreground="?attr/selectableItemBackground"
                        app:ico_color="@color/mc_primary_icon"
                        app:ico_icon="@string/faw_envelope"
                        app:ico_size="35dp">
                    </ImageView>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="10dp"
                        app:ico_color="@color/mc_primary_icon"
                        app:ico_icon="@string/faw_history"
                        app:ico_size="35dp">
                    </ImageView>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/share_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

                <com.mobicage.rogerthat.widget.ResizableImageView
                    android:id="@+id/qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="0dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/poke_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mc_background_color"
        android:padding="15dp">

        <Button
            android:id="@+id/poke_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/ButtonBackground"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>